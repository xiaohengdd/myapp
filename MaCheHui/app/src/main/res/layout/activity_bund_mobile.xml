<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:id="@+id/head"
        layout="@layout/header_top" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/head"
        android:background="@color/black1" >

        <LinearLayout
            android:id="@+id/ly_1"
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_number_rigest"
            android:layout_width="fill_parent"
            android:layout_height="50.0dp"
            android:layout_below="@id/ly_1"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/number_et_forget"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dp"
                android:layout_marginRight="15.0dp"
                android:layout_weight="2.54"
                android:background="@android:color/white"
                android:ems="11"
                android:hint="请输入手机号"
                android:inputType="number"
                android:maxLength="11"
                android:paddingLeft="10.0dp"
                android:textColor="#545454"
                android:textSize="16.0sp" >
            </EditText>

            <TextView
                android:id="@+id/rebind_sms_btn"
                android:layout_width="100dp"
                android:layout_height="32dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/yzm_selector"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="#ffffff"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_2"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_below="@id/ly_number_rigest"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_yanzhengma"
            android:layout_width="fill_parent"
            android:layout_height="50.0dp"
            android:layout_below="@id/ly_2"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/verify_code_et_forget"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dp"
                android:layout_marginRight="15.0dp"
                android:layout_weight="3"
                android:background="@android:color/white"
                android:ems="4"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLength="20"
                android:paddingLeft="10.0dp"
                android:textColor="#545454"
                android:textSize="16.0sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_3"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_below="@id/ly_yanzhengma"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_password"
            android:layout_width="fill_parent"
            android:layout_height="50.0dp"
            android:layout_below="@id/ly_3"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/new_pwd_et_forget"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dp"
                android:layout_marginRight="15.0dp"
                android:layout_weight="3"
                android:background="@android:color/white"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:maxLength="20"
                android:paddingLeft="10.0dp"
                android:textColor="#545454"
                android:textSize="16.0sp" />
        </LinearLayout>

        <Button
            android:id="@+id/submit_btn_forget"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@id/ly_password"
            android:layout_margin="20.0dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/login_btn_selector"
            android:text="提交"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

</RelativeLayout>