<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/stop_map_hover_bg"
        android:orientation="vertical" >

        <!-- 洗车店所在的位置 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/stop_list_item_tv_city"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="1.停车场的名称"
                android:textColor="#000000"
                android:textSize="18sp" />
            <!-- 显示的距离 -->

            <TextView
                android:id="@+id/stop_list_item_tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="距离" />
        </LinearLayout>

        <TextView
            android:id="@+id/stop_list_item_tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="车位的地址" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#d9d9d9" />

        <TextView
            android:id="@+id/go_tv_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="right"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/app_map_icon"
            android:textColor="#56cc00"
            android:text="到这里去" />
    </LinearLayout>

</LinearLayout>