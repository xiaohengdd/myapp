<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal" >

    <include
        android:id="@+id/top_rl"
        layout="@layout/header_top" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/top_rl"
        android:background="@color/wash_driver" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_rl"
        android:background="@drawable/daijia" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dai_jia_center_pading"
        android:layout_marginRight="@dimen/dai_jia_center_pading"
        android:layout_marginTop="@dimen/dai_jia_center_box"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="10dp" >

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/daijia" />
 
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/phone_green" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="400-685-0531" />
    </LinearLayout>

    <Button
        android:id="@+id/call_btn_driver"
        style="@style/red_big_btn"
        android:layout_above="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:text="一键拨号叫代驾" />

    <LinearLayout
        android:id="@+id/ly_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/call_btn_driver"
        android:layout_marginBottom="2dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/iv_choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/readclause_selector"
            android:checked="true"
            android:text="@string/register_tip"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/protocol_tv_driver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:text="《代驾使用协议》"
            android:textColor="#0097f6"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>