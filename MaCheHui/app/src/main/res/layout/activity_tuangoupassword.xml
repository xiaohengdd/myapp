<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include layout="@layout/header_top" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/wash_driver" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:background="#ffffff"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/liquan_img" />

        <TextView
            android:id="@+id/detail_tv_tuan_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/good_name_tv_tuan_detail"
            android:textSize="13sp"
            android:text=""
            android:layout_toRightOf="@+id/imageView1"
             />

        <TextView
            android:id="@+id/good_name_tv_tuan_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_alignLeft="@+id/detail_tv_tuan_detail"
            android:layout_alignTop="@+id/imageView1"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/valid_time_tv_tuan_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/detail_tv_tuan_detail"
            android:layout_below="@+id/detail_tv_tuan_detail"
            android:layout_marginRight="20dp"
            android:text=""
            android:textSize="12sp" />

        <TextView
            android:id="@+id/num_tv_tuan_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text=""
            android:textColor="#000000" />
    </RelativeLayout>

    <com.cac.machehui.client.view.XListView
        android:id="@+id/quan_xlv_tuan_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:descendantFocusability="blocksDescendants"
        android:divider="#ebebeb"
        android:dividerHeight="5dp"
        android:scrollbars="none" >
    </com.cac.machehui.client.view.XListView>

</LinearLayout>