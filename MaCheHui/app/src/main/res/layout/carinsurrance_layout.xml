<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
    <include layout="@layout/title_layout"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9" >

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/city_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="行驶城市："
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="3" 
                android:textSize="16sp"
                android:textColor="#454545"/>
            
            <TextView
                android:id="@+id/city_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请选择"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="7" 
                android:textSize="16sp"
                android:textColor="#454545" />
            
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/linear1">
            
            <TextView
                android:id="@+id/carNumber_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车牌号码："
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="3" 
                android:textSize="16sp"
                android:textColor="#454545"/>
            
            <EditText
                android:id="@+id/carNumber_value"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="请输入"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="7" 
                android:textSize="16sp"
                android:textColor="#454545" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/linear2">
            
            <TextView
                android:id="@+id/date_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提车年月："
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="2" 
                android:textSize="16sp"
                android:textColor="#454545"/>
            
            <EditText
                android:id="@+id/year_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="2" 
                android:textSize="16sp"
                android:textColor="#454545" />
            
            <TextView
                android:id="@+id/year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="2" 
                android:textSize="16sp"
                android:textColor="#454545" />
            
            <EditText
                android:id="@+id/month_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="2" 
                android:textSize="16sp"
                android:textColor="#454545" />
            
            <TextView
                android:id="@+id/date_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="月"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="2" 
                android:textSize="16sp"
                android:textColor="#454545" />
            
            
            
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/linear4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/linear3">
            
             <TextView
                android:id="@+id/carPrice_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车价："
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="3" 
                android:textSize="16sp"
                android:textColor="#454545"/>
            
            <EditText
                android:id="@+id/carPrice_value"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="请输入"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="7" 
                android:textSize="16sp"
                android:textColor="#454545" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/linear5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/linear4">
            
             <TextView
                android:id="@+id/tel_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机："
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="3" 
                android:textSize="16sp"
                android:textColor="#454545"/>
            
            <EditText
                android:id="@+id/tel_value"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="请输入"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="7" 
                android:textSize="16sp"
                android:textColor="#454545" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/linear6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/linear5">
            
             <TextView
                android:id="@+id/email_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="email："
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="3" 
                android:textSize="16sp"
                android:textColor="#454545"/>
            
            <EditText
                android:id="@+id/email_value"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="请输入"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="7" 
                android:textSize="16sp"
                android:textColor="#454545" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/linear7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/linear6">

            <Button
                android:id="@+id/submit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="快速报价" 
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

		</LinearLayout>
        
    </RelativeLayout>

</LinearLayout>